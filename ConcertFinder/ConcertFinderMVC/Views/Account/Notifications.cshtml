@model List<ConcertFinderMVC.Models.NotificationItem>

@section Header
{
    <script src="@Url.Content("~/Scripts/dateformat.js")" type="text/javascript"></script>
}

<ul id="notifs">
@foreach (ConcertFinderMVC.Models.NotificationItem item in Model)
{
    <li class="notif" id="@item.Id">
        <div>
            @item.Titre
        </div>
        <div>
            @item.Date
        </div>
        <div>
            @item.Message
        </div> 
    
        @if (item.Titre != "Statut")
        {
            @Html.ActionLink("Voir l'evenement", "Detail", "Event", new { id = item.IdEvent, creation = true}, null)
        }
    </li>
}
</ul>

@section Script
{
    <script type="text/javascript">

        $(window).scroll(function () {
            if ($(window).scrollTop() == $(document).height() - $(window).height()) {
                var id = $(".notif:last").attr("id");
                $.ajax({
                    url: "GetNextNotifications",
                    data: { last_id: id },
                    success: function (data) {
                        var url = document.URL.split("//");
                        url = (url[1] ? url[1] : url[0]).split("/");
                        var txt = "";
                        for (var i = 0; i < data.length; i++) {

                            var milli = data[i].Date.replace(/\/Date\((-?\d+)\)\//, '$1');
                            var d = new Date(parseInt(milli));

                            txt += "<li class='notif' id='" + data[i].Id + "'>" +
                                    "<div>" +
                                        data[i].Titre +
                                    "</div>" +
                                    "<div>" +
                                        dateFormat(d, "dd/mm/yyyy HH:MM:ss") +
                                    "</div>" +
                                    "<div>" +
                                        data[i].Message +
                                    "</div>";

                            if (data[i].Titre != "Statut") {
                                txt += "<a href='http://"+url[0]+"/Event/Detail/" + data[i].IdEvent + "'>Voir l'événement</a>";
                            }
                            txt += "</li>";
                        }
                        $("#notifs").append(txt);
                    },
                    dataType: "json"
                });
            }
        });

    </script>

}