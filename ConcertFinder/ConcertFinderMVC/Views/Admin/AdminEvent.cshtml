@model ConcertFinderMVC.Models.AdminModels

@{
    ViewBag.Title = "AdminEvent";
}

@section Header
{
     <link href="@Url.Content("~/Content/Admin.css")" rel="stylesheet" type="text/css"/>
}


   

    
<div class="main">
    <div class="section_title">@Model.Page</div>

    <ul id="menu_onglet">
        @if (Model.User.Role.Equals(ConcertFinderMVC.Models.UserModel.GetRoleType((int)ConcertFinderMVC.Models.eRole.Admin)))
        {
                    <li id="onglet">@Html.ActionLink("Gerer les utlisateurs", "ManageUser", "Admin")</li>
        }
    
        <li id="onglet">@Html.ActionLink("Evenement valide", "ValidEvent", "Admin")</li>
        <li id="onglet">@Html.ActionLink("Evenement en attente", "NotValidEvent", "Admin")</li>
    </ul>


    <ul id="item">
        @foreach (ConcertFinderMVC.Models.EventItem eve in Model.listEvent)
        {
            <li class="item">
                @if (eve.Image != null)
            {
                <!--<img src="@@Url.Content("/ConcertFinderMVC/")@@item.Image" width="125" height="160" alt="flyers" class="flyers float-left" />-->
                <img src="@Url.Content("/")@eve.Image" width="125" height="160" alt="flyers" class="flyers float-left" />
            }
            else
            {
                <img src="@Url.Content("~/Content/Images/no_avatar.gif")" width="125" height="160" alt="flyers" class="flyers float-left" />
            }

            <strong class="item_titre">@eve.Titre</strong>
            <span class="item_type float-left">@eve.Type</span>
            <span class="item_Date float-right">@eve.StartDate.ToShortDateString() à @eve.Ville (@eve.CP.Substring(0, 2))</span>
            <span class="item_salle">@eve.Salle</span>
            <em class="item_descr">
                @ConcertFinderMVC.BusinessManagement.Tool.Truncate(eve.Description)
            </em>
                @if (eve.Valide == false)
                { 
                    <span id="valide">@Html.ActionLink("Verifier la validite", "Detail", "Event", new { id = @eve.Id, creation = true }, null)</span>
                }
            </li>
        }
    <ul>
</div>