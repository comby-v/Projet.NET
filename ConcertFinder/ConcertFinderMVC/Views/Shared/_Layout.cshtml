        </div>
        <ul id="menu">
            <li>@Html.ActionLink("Tous les événements", "Index", "Event")</li>
            <li>@Html.ActionLink("Concerts", "Concert", "Event")</li>
            <li>@Html.ActionLink("Spectacles", "Spectacle", "Event")</li>
            <li>@Html.ActionLink("Festivals", "Festival", "Event")</li>
        </ul>
    </header>
    <section class="page">
        @RenderBody()
    </section>



