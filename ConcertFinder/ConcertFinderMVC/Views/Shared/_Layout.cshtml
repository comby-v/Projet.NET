          
<!DOCTYPE html>
<html>
<head>
    <title>Concert Finder</title>
    <meta content="text/html; charset=utf-8" http-equiv="Content-Type" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.2.min.js")" type="text/javascript"></script>
</head>
<body>
    <header>
        <div id="banniere">
               <div id="connect" class="float-right">
                    @if (!Request.IsAuthenticated)
                    {
                        <div id="open_connect" class="float-right">se connecter</div>
                        <div id="open_connect" class="float-right">@Html.ActionLink("Ajouter un événement", "CreateEvent", "Event")</div>

                        <div id="connect_panel" class="clear">
                         @Html.Partial("_logOn", new ConcertFinderMVC.Models.LogOnModel())
                        </div>
                     }
                     else
                     {
                         <div id="connect_panel" class="clear">
                            @Html.Partial("_accountPanel", new ConcertFinderMVC.Models.LogOnModel())
                        </div>
                        
                     }
                    <div class="clear"></div>

               </div>
        </div>
        <ul id="menu">
            <li>@Html.ActionLink("Tous les événements", "Index", "Event")</li>
            <li>@Html.ActionLink("Concerts", "Concert", "Event")</li>
            <li>@Html.ActionLink("Spectacles", "Spectacle", "Event")</li>
            <li>@Html.ActionLink("Festivals", "Festival", "Event")</li>
            <li>@Html.ActionLink("Ajouter un événement", "CreateEvent", "Event")</li>
            @if (User.Identity.IsAuthenticated)
            {
                <li>@Html.ActionLink("Administration utilisateur", "ManageUser", "Admin")</li>
            }
        </ul>
    </header>
    <section class="page">
        @RenderBody()
    </section>
</body>
</html>
@RenderSection("Script", false)