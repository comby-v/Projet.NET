    
<!DOCTYPE html>
<html>
<head>
    <title>Concert Finder</title>
    <!--<meta content="text/html; charset=utf-8" http-equiv="Content-Type" />-->
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/jquery-ui-1.8.20.custom.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.20.custom.min.js")" type="text/javascript"></script>
    
    @RenderSection("Header", false)
</head>
<body>
    <header>
        <div id="banniere">
            <div class="center">
                <strong id="concertfinder">Concert Finder</strong>
               <div id="connect" class="float-right">
                    @if (!Request.IsAuthenticated)
                    {
                        <div id="open_connect" >se connecter</div>
                        <div id="connect_panel">
                            @Html.Partial("_logOn", new ConcertFinderMVC.Models.LogOnModel())
                        </div>
                    }
                    else
                    {
                         <div id="connect_panel">
                            @Html.Partial("_accountPanel", new ConcertFinderMVC.Models.LogOnModel())
                        </div>
                    }
               </div>

            </div>
        </div>
            <div id="menu">
                <div id="menu_content">
                     <img src="@Url.Content("~/Content/Images/nav-left.png")" alt="menu_left_corner" id="menu_left_corner" class="float-left"/>
                     <ul class="float-left">
                       <li class="menu_item_first float-left">@Html.ActionLink("Tous les événements", "Index", "Event")</li>
                       <li class="menu_item float-left">@Html.ActionLink("Concerts", "Concert", "Event")</li>
                       <li class="menu_item float-left">@Html.ActionLink("Spectacles", "Spectacle", "Event")</li>
                       <li class="menu_item float-left">@Html.ActionLink("Festivals", "Festival", "Event")</li>
                   
                       @if (User.Identity.IsAuthenticated)
                       {
                             <li class="menu_item float-left">@Html.ActionLink("Mes évènements", "MyEvents", "Event")</li>
                             if (ConcertFinderMVC.BusinessManagement.Tool.IsModerator(User.Identity.Name))
                             {
                                <li class="menu_item float-left">@Html.ActionLink("Moderation", "NotValidEvent", "Admin")</li>
                             } 
                            if (ConcertFinderMVC.BusinessManagement.Tool.IsAdmin(User.Identity.Name))
                            {
                                <li class="menu_item float-left">@Html.ActionLink("Administration", "ManageUser", "Admin")</li>
                                <li class="menu_item float-left">@Html.ActionLink("Moderation", "NotValidEvent", "Admin")</li>
                            }
                       }
                       @RenderSection("Search", false)
                      </ul>
                      <img src="@Url.Content("~/Content/Images/nav-right.png")" alt="menu_right_corner" class="float-left"/>
                 </div>
            </div>
        </header>
        <section class="page">
            @RenderBody()
        </section>
    </body>
</html>
@RenderSection("Script", false)



<script type="text/javascript">

    $(document).ready(function () {
        $("#open_connect").click(function () {
            $("#connect_panel").toggle('blind', null, 500);
        });

        setInterval(function (){
            var url = document.URL.split("//");
            url = (url[1] ? url[1] : url[0]).split("/");
            $.ajax({
                url: "http://" + url[0] + "/Account/Check",
                data: { user : "@User.Identity.Name" },
                success: function (data){
                    if (parseInt(data) != -1){
                        $("#Mynotifs").text(" ("+data+")");
                    }
                }
            });
        }, 45000);

        $("#SearchBar").keyup(function () {
            var url = document.URL.split("//");
            url = (url[1] ? url[1] : url[0]).split("/");
            if ($(this).val().length >= 2) {
                $.ajax({
                    url: "http://" + url[0] + "/Event/Search", //"http://" + url[0] + "/ConcertFinderMVC/Event/Search"
                    data: { q: $(this).val() },
                    success: function (data) {
                        if ($("#items") != null) {
                            $("#items").children("a").remove();
                            for (var i = 0; i < data.length; i++) {

                                var text = "<li class='item' id='"+ data[i].Id +"'>"+
                                                "<a href='/Event/Detail/" + data[i].Id + "'>";
                                if (data[i].Image != null) {
                                    // text += "<img src="+"@@Url.Content("/ConcertFinderMVC/")"+data[i].Image+" width='125' height='160' alt='flyers' class='flyers float-left' />";
                                    text += "<img src="+"@Url.Content("/")"+data[i].Image+" width='125' height='160' alt='flyers' class='flyers float-left' />";
                                }
                                else {
                                    text += "<img src='"+"@Url.Content("~/Content/Images/no_avatar.gif")"+"' width='125' height='160' alt='flyers' class='flyers float-left' />";
                                }

                                var milli = data[i].StartDate.replace(/\/Date\((-?\d+)\)\//, '$1');
                                var d = new Date(parseInt(milli));

                                text += "<strong class='item_titre'>" + data[i].Titre + "</strong>" +
                                    "<span class='item_type float-left'>" + data[i].Type + "</span>" +
                                    "<span class='item_Date float-right'>" + dateFormat(d, "dd/mm/yyyy") + "<br />à " + data[i].Ville + " (" + data[i].CP + ")</span>" +
                                    "<span class='item_salle'>" + data[i].Salle + "</span>"+
                                    "<em class='item_descr'>" +
                                        data[i].Description +
                                    "</em>" +
                                "</a>" +
                                "</li>";

                                $("#items").append(text);
                            }
                        }
                    },
                    dataType: "json"
                });
            }
        });

    });

</script>