          
<!DOCTYPE html>
<html>
<head>
    <title>Concert Finder</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
</head>
<body>
    <header>
        <div id="banniere">
               <div id="connect" class="float-right">
                    @if (!Request.IsAuthenticated)
                    {
                        <div id="open_connect" class="float-right">se connecter</div>
                        <div id="open_connect" class="float-right">@Html.ActionLink("S'inscrire", "Register", "Account")</div>
                        <div id="connect_panel" class="clear">
                         @Html.Partial("_logOn", new ConcertFinderMVC.Models.LogOnModel())
                         </div>
                     }
                     else
                     {
                        <span >@User.Identity.Name</span>
                     }
                    <div class="clear"></div>

               </div>
        </div>
        <ul id="menu">
            <li>@Html.ActionLink("Tous les événements", "Index", "Event")</li>
            <li>@Html.ActionLink("Concerts", "Concert", "Event")</li>
            <li>@Html.ActionLink("Spectacles", "Spectacle", "Event")</li>
            <li>@Html.ActionLink("Festivals", "Festival", "Event")</li>
            <li>@Html.ActionLink("Ajouter un événement", "CreateEvent", "Event")</li>
        </ul>
    </header>
    <section class="page">
        @RenderBody()
    </section>
</body>
</html>
@RenderSection("Script", false)
<script type="text/javascript">
    $("#open_connect").click(function () {
        $("#connect_panel").toggle();
    });
</script>